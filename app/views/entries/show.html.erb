<li>
  <span class="content"><%= @entry.title %></span>
  <span class="content"><%= @entry.body %></span>
  <span class="timestamp">
    Posted at <%= @entry.created_at %> .
  </span>
  <% if current_user?(@entry.user) %>
    <%= link_to "delete", @entry, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: @entry.title %>
  <% end %>
</li>